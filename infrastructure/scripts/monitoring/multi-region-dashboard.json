{
  "displayName": "iSECTECH Multi-Region Infrastructure Dashboard",
  "mosaicLayout": {
    "tiles": [
      {
        "width": 12,
        "height": 4,
        "widget": {
          "title": "Global Cluster Health Overview",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"kubernetes.io/container/cpu/core_usage_time\" resource.type=\"k8s_container\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": ["resource.label.location"]
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "CPU Usage (cores/sec)",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "yPos": 4,
        "widget": {
          "title": "Regional Node Count",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"kubernetes.io/node/ready_condition\" resource.type=\"k8s_node\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_LATEST",
                      "crossSeriesReducer": "REDUCE_COUNT",
                      "groupByFields": ["resource.label.location"]
                    }
                  }
                },
                "plotType": "STACKED_BAR",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "Node Count",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 6,
        "yPos": 4,
        "widget": {
          "title": "Regional Memory Utilization",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"kubernetes.io/container/memory/used_bytes\" resource.type=\"k8s_container\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": ["resource.label.location"]
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "Memory Usage (bytes)",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "width": 12,
        "height": 4,
        "yPos": 8,
        "widget": {
          "title": "Global Load Balancer Requests by Region",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"loadbalancing.googleapis.com/https/request_count\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": ["resource.label.backend_target_name"]
                    }
                  }
                },
                "plotType": "STACKED_AREA",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "Requests per second",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "yPos": 12,
        "widget": {
          "title": "Regional Pod Count",
          "scorecard": {
            "timeSeriesQuery": {
              "timeSeriesFilter": {
                "filter": "metric.type=\"kubernetes.io/container/ready_condition\" resource.type=\"k8s_container\"",
                "aggregation": {
                  "alignmentPeriod": "60s",
                  "perSeriesAligner": "ALIGN_LATEST",
                  "crossSeriesReducer": "REDUCE_COUNT",
                  "groupByFields": ["resource.label.location"]
                }
              }
            },
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 6,
        "yPos": 12,
        "widget": {
          "title": "Cross-Region Network Traffic",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"compute.googleapis.com/instance/network/sent_bytes_count\" resource.type=\"gce_instance\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": ["resource.label.zone"]
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "Network Traffic (bytes/sec)",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "width": 4,
        "height": 3,
        "yPos": 16,
        "widget": {
          "title": "US Central Cluster Status",
          "scorecard": {
            "timeSeriesQuery": {
              "timeSeriesFilter": {
                "filter": "metric.type=\"kubernetes.io/node/ready_condition\" resource.type=\"k8s_node\" resource.label.location=\"us-central1\"",
                "aggregation": {
                  "alignmentPeriod": "60s",
                  "perSeriesAligner": "ALIGN_LATEST",
                  "crossSeriesReducer": "REDUCE_COUNT"
                }
              }
            },
            "gaugeView": {
              "lowerBound": 0.0,
              "upperBound": 10.0
            }
          }
        }
      },
      {
        "width": 4,
        "height": 3,
        "xPos": 4,
        "yPos": 16,
        "widget": {
          "title": "Europe West4 Cluster Status",
          "scorecard": {
            "timeSeriesQuery": {
              "timeSeriesFilter": {
                "filter": "metric.type=\"kubernetes.io/node/ready_condition\" resource.type=\"k8s_node\" resource.label.location=\"europe-west4\"",
                "aggregation": {
                  "alignmentPeriod": "60s",
                  "perSeriesAligner": "ALIGN_LATEST",
                  "crossSeriesReducer": "REDUCE_COUNT"
                }
              }
            },
            "gaugeView": {
              "lowerBound": 0.0,
              "upperBound": 10.0
            }
          }
        }
      },
      {
        "width": 4,
        "height": 3,
        "xPos": 8,
        "yPos": 16,
        "widget": {
          "title": "Asia Northeast1 Cluster Status",
          "scorecard": {
            "timeSeriesQuery": {
              "timeSeriesFilter": {
                "filter": "metric.type=\"kubernetes.io/node/ready_condition\" resource.type=\"k8s_node\" resource.label.location=\"asia-northeast1\"",
                "aggregation": {
                  "alignmentPeriod": "60s",
                  "perSeriesAligner": "ALIGN_LATEST",
                  "crossSeriesReducer": "REDUCE_COUNT"
                }
              }
            },
            "gaugeView": {
              "lowerBound": 0.0,
              "upperBound": 10.0
            }
          }
        }
      },
      {
        "width": 12,
        "height": 4,
        "yPos": 19,
        "widget": {
          "title": "Regional Compliance Status",
          "text": {
            "content": "**Multi-Region Compliance Status**\n\n• **US Central1**: CCPA Compliant ✓\n• **Europe West4**: GDPR Compliant ✓  \n• **Asia Northeast1**: APPI Compliant ✓\n• **US East1**: CCPA Backup ✓\n• **Europe West1**: GDPR Backup ✓\n\n**Data Residency**: Enforced per region  \n**Cross-Region Transfer**: Disabled  \n**Encryption**: Regional KMS keys  \n**Audit Logging**: Enabled globally",
            "format": "MARKDOWN"
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "yPos": 23,
        "widget": {
          "title": "Regional Error Rates",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"kubernetes.io/container/restart_count\" resource.type=\"k8s_container\"",
                    "aggregation": {
                      "alignmentPeriod": "300s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": ["resource.label.location"]
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "Container Restarts/sec",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 6,
        "yPos": 23,
        "widget": {
          "title": "Regional Disk Utilization",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"kubernetes.io/pod_volume/used_bytes\" resource.type=\"k8s_pod\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": ["resource.label.location"]
                    }
                  }
                },
                "plotType": "STACKED_AREA",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "Disk Usage (bytes)",
              "scale": "LINEAR"
            }
          }
        }
      }
    ]
  }
}