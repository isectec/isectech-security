# ═══════════════════════════════════════════════════════════════════════════════
# SECURITY CONFIGURATION (Relaxed for Development)
# ═══════════════════════════════════════════════════════════════════════════════

# TLS Configuration (Relaxed)
TLS_MIN_VERSION=1.0  # Relaxed for local development
TLS_CIPHER_SUITES=  # Use default
CERTIFICATE_PROVIDER=self-signed

# Session Configuration (Very permissive)
SESSION_COOKIE_SECURE=false  # HTTP allowed
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=none  # Very permissive
SESSION_TIMEOUT_MINUTES=1440  # 24 hours
SESSION_ABSOLUTE_TIMEOUT_HOURS=72  # 3 days
SESSION_IDLE_TIMEOUT_MINUTES=240  # 4 hours

# CORS Configuration (Very permissive)
CORS_ALLOWED_ORIGINS=*  # Allow all origins
CORS_ALLOWED_METHODS=*  # Allow all methods
CORS_ALLOWED_HEADERS=*  # Allow all headers
CORS_CREDENTIALS=true

# Rate Limiting (Very relaxed)
RATE_LIMIT_GENERAL_REQUESTS_PER_MINUTE=10000
RATE_LIMIT_API_REQUESTS_PER_MINUTE=50000
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_LOGIN_REQUESTS_PER_MINUTE=100

# Content Security Policy (Disabled)
CSP_ENABLED=false
CSP_REPORT_URI=http://localhost:3000/api/csp-report
CSP_REPORT_ONLY=true

