{
  "dashboard": {
    "id": null,
    "title": "iSECTECH Multi-Region SRE Operational Dashboard",
    "tags": ["sre", "operational", "multi-region", "detailed-monitoring"],
    "timezone": "UTC", 
    "refresh": "15s",
    "time": {
      "from": "now-4h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "15s", "30s", "1m", "2m", "5m", "10m"],
      "time_options": ["15m", "30m", "1h", "2h", "4h", "8h", "12h", "24h"]
    },
    "schemaVersion": 37,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Regional Health Status Matrix",
        "type": "status-history",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=~\"regional-health-check-.*\"}",
            "legendFormat": "{{region}}-{{check_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "custom": {
              "fillOpacity": 100
            },
            "unit": "short"
          }
        },
        "options": {
          "showValue": "never",
          "rowHeight": 0.9,
          "colWidth": 0.9
        }
      },
      {
        "id": 2,
        "title": "Request Rate by Region",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum by (region) (rate(http_requests_total{region=~\"$region\"}[5m]))",
            "legendFormat": "{{region}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Requests per second",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["last", "max", "mean", "sum"]
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate by Region",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum by (region) (rate(http_requests_total{status=~\"5..\",region=~\"$region\"}[5m])) / sum by (region) (rate(http_requests_total{region=~\"$region\"}[5m])) * 100",
            "legendFormat": "{{region}} Error %",
            "refId": "A"
          },
          {
            "expr": "0.1",
            "legendFormat": "SLO Threshold (0.1%)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Error Rate %",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "SLO Threshold (0.1%)"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}},
                {"id": "custom.drawStyle", "value": "line"},
                {"id": "custom.lineStyle", "value": {"fill": "dash", "dash": [10, 10]}}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 4,
        "title": "Response Time Percentiles",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum by (region, le) (rate(http_request_duration_seconds_bucket{region=~\"$region\"}[5m])))",
            "legendFormat": "{{region}} P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum by (region, le) (rate(http_request_duration_seconds_bucket{region=~\"$region\"}[5m])))",
            "legendFormat": "{{region}} P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum by (region, le) (rate(http_request_duration_seconds_bucket{region=~\"$region\"}[5m])))",
            "legendFormat": "{{region}} P99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ms",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 0,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Response Time",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 5,
        "title": "Cross-Region Latency Heatmap",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (source_region, target_region, le) (rate(cross_region_latency_seconds_bucket[5m])))",
            "legendFormat": "{{source_region}} -> {{target_region}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "spectrum"
            },
            "unit": "ms",
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "options": {
          "calculate": false,
          "cellGap": 1,
          "cellValues": {},
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "spectrum",
            "reverse": false,
            "scale": "exponential",
            "scheme": "Oranges",
            "steps": 64
          },
          "exemplars": {
            "color": "rgba(255,0,255,0.7)"
          },
          "filterValues": {
            "le": 1e-9
          },
          "legend": {
            "show": false
          },
          "rowsFrame": {
            "layout": "auto"
          },
          "tooltip": {
            "show": true,
            "yHistogram": false
          },
          "yAxis": {
            "axisPlacement": "left",
            "reverse": false,
            "unit": "ms"
          }
        }
      },
      {
        "id": 6,
        "title": "Database Connection Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "mysql_up{region=~\"$region\"}",
            "legendFormat": "{{region}} DB",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "none",
            "mappings": [
              {
                "options": {
                  "0": {"text": "DOWN", "color": "red"},
                  "1": {"text": "UP", "color": "green"}
                },
                "type": "value"
              }
            ]
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "horizontal",
          "textMode": "name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 7,
        "title": "Database Query Performance",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 24},
        "targets": [
          {
            "expr": "rate(mysql_global_status_queries{region=~\"$region\"}[5m])",
            "legendFormat": "{{region}} Queries/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "qps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 15,
              "gradientMode": "opacity",
              "spanNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Queries/second",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "calcs": ["last"]
          }
        }
      },
      {
        "id": 8,
        "title": "Redis Cache Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 24},
        "targets": [
          {
            "expr": "redis_up{region=~\"$region\"}",
            "legendFormat": "{{region}} Cache",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "none",
            "mappings": [
              {
                "options": {
                  "0": {"text": "DOWN", "color": "red"},
                  "1": {"text": "UP", "color": "green"}
                },
                "type": "value"
              }
            ]
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "horizontal",
          "textMode": "name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 9,
        "title": "Resource Utilization Overview",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "avg by (region) (100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\",region=~\"$region\"}[5m])) * 100))",
            "legendFormat": "{{region}} CPU %",
            "refId": "A"
          },
          {
            "expr": "avg by (region) ((1 - (node_memory_MemAvailable_bytes{region=~\"$region\"} / node_memory_MemTotal_bytes{region=~\"$region\"})) * 100)",
            "legendFormat": "{{region}} Memory %",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent",
            "max": 100,
            "min": 0,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Utilization %",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {"mode": "area"}
            },
            "thresholds": {
              "steps": [
                {"color": "transparent", "value": 0},
                {"color": "green", "value": 60},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 10,
        "title": "Replication Lag",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "replication_lag_seconds{source_region=~\"$region\"}",
            "legendFormat": "{{source_region}} -> {{target_region}}",
            "refId": "A"
          },
          {
            "expr": "60",
            "legendFormat": "SLO Threshold (60s)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Replication Lag",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "SLO Threshold (60s)"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}},
                {"id": "custom.drawStyle", "value": "line"},
                {"id": "custom.lineStyle", "value": {"fill": "dash", "dash": [10, 10]}}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 11,
        "title": "Compliance Violations",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 38},
        "targets": [
          {
            "expr": "increase(compliance_violations_total{compliance_zone=~\"$compliance_zone\"}[5m])",
            "legendFormat": "{{regulation}} Violations",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "custom": {
              "drawStyle": "bars",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 80,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "normal", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Violations",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegex", "options": ".*Violations"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["last", "sum"]
          }
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "0s",
          "frequency": "10s",
          "handler": 1,
          "name": "Compliance Violations Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 12,
        "title": "Active Alerts Summary",
        "type": "table",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 38},
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\",region=~\"$region\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "inspect": false,
              "filterable": true
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "severity"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "green", "value": null},
                      {"color": "yellow", "value": "warning"},
                      {"color": "red", "value": "critical"}
                    ]
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "severity"
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {
                "alertname": 0,
                "severity": 1,
                "region": 2,
                "description": 3
              },
              "renameByName": {
                "alertname": "Alert",
                "severity": "Severity",
                "region": "Region",
                "description": "Description"
              }
            }
          }
        ]
      },
      {
        "id": 13,
        "title": "Network Traffic by Region",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "sum by (region) (rate(node_network_receive_bytes_total{region=~\"$region\",device!=\"lo\"}[5m]))",
            "legendFormat": "{{region}} Inbound",
            "refId": "A"
          },
          {
            "expr": "sum by (region) (rate(node_network_transmit_bytes_total{region=~\"$region\",device!=\"lo\"}[5m]))",
            "legendFormat": "{{region}} Outbound",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "Bps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "Bytes/second",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max", "mean"]
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "region",
          "type": "query",
          "query": "label_values(up{job=~\"regional-health-check-.*\"}, region)",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "multi": true,
          "includeAll": true,
          "refresh": 1,
          "options": []
        },
        {
          "name": "compliance_zone",
          "type": "custom",
          "query": "gdpr,ccpa,appi",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "multi": true,
          "includeAll": true,
          "options": []
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(http_requests_total{region=~\"$region\"}, service)",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "multi": true,
          "includeAll": true,
          "refresh": 1,
          "options": []
        },
        {
          "name": "severity",
          "type": "custom",
          "query": "critical,warning,info",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "multi": true,
          "includeAll": true,
          "options": []
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "enable": true,
          "expr": "increase(deployment_events_total[1m]) > 0",
          "iconColor": "blue",
          "titleFormat": "Deployment: {{service}}"
        },
        {
          "name": "Scale Events",
          "datasource": "prometheus",
          "enable": true,
          "expr": "increase(autoscale_events_total[1m]) > 0",
          "iconColor": "green",
          "titleFormat": "Scale: {{region}} {{direction}}"
        },
        {
          "name": "Failovers",
          "datasource": "prometheus",
          "enable": true,
          "expr": "increase(failover_events_total[1m]) > 0",
